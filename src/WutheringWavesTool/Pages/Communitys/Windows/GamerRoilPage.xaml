<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="WutheringWavesTool.Pages.Communitys.Windows.GamerRoilPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:WutheringWavesTool.Pages.Communitys.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:Waves.Api.Models.Communitys"
    xmlns:ui="using:WutheringWavesTool.Controls"
    xmlns:wuc="using:WinUICommunity"
    xmlns:wui="using:CommunityToolkit.WinUI"
    mc:Ignorable="d">
    <i:Interaction.Behaviors>
        <i:EventTriggerBehavior EventName="Loaded">
            <i:InvokeCommandAction Command="{x:Bind ViewModel.LoadedCommand}" />
        </i:EventTriggerBehavior>
    </i:Interaction.Behaviors>
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="7*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <ui:ImageEx
            x:Name="picImage"
            Grid.RowSpan="2"
            Grid.ColumnSpan="2"
            Width="600"
            Margin="-240,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Opacity="0.2"
            Source="{x:Bind ViewModel.RolePic, Mode=OneWay}"
            Stretch="UniformToFill">
            <ui:ImageEx.OpacityTransition>
                <ScalarTransition />
            </ui:ImageEx.OpacityTransition>
            <i:Interaction.Behaviors>
                <i:EventTriggerBehavior EventName="PointerEntered">
                    <i:ChangePropertyAction
                        PropertyName="Opacity"
                        TargetObject="{x:Bind picImage}"
                        Value="1" />
                    <i:ChangePropertyAction
                        PropertyName="Opacity"
                        TargetObject="{x:Bind session}"
                        Value="0" />
                </i:EventTriggerBehavior>
                <i:EventTriggerBehavior EventName="PointerExited">
                    <i:ChangePropertyAction
                        PropertyName="Opacity"
                        TargetObject="{x:Bind picImage}"
                        Value="0.1" />
                    <i:ChangePropertyAction
                        PropertyName="Opacity"
                        TargetObject="{x:Bind session}"
                        Value="1" />
                </i:EventTriggerBehavior>
            </i:Interaction.Behaviors>
        </ui:ImageEx>
        <Grid
            x:Name="session"
            Grid.RowSpan="2"
            Padding="10"
            CornerRadius="5">
            <Grid.OpacityTransition>
                <ScalarTransition />
            </Grid.OpacityTransition>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <StackPanel Width="30" Orientation="Vertical">
                <ui:ImageEx
                    Width="40"
                    Height="40"
                    Margin="-8,-8,0,0"
                    Source="{x:Bind ViewModel.AttImage, Mode=OneWay}"
                    Stretch="UniformToFill" />
                <TextBlock
                    FontFamily="{ThemeResource DefaultFont}"
                    FontSize="25"
                    Text="{x:Bind ViewModel.RoleName, Mode=OneWay}"
                    TextWrapping="Wrap" />
            </StackPanel>
            <RatingControl
                Grid.Column="1"
                Margin="30,0,0,0"
                VerticalAlignment="Top"
                IsReadOnly="True"
                MaxRating="{x:Bind ViewModel.RoleStar, Mode=OneWay}"
                Value="{x:Bind ViewModel.RoleStar, Mode=OneWay}">
                <RatingControl.RenderTransform>
                    <RotateTransform Angle="90" />
                </RatingControl.RenderTransform>
            </RatingControl>
            <TextBlock
                Grid.Column="2"
                Width="25"
                Margin="-170,0,0,0"
                FontFamily="{ThemeResource DefaultFont}"
                FontSize="18"
                TextWrapping="Wrap">
                <Run Text="LV" />
                <Run Text="{x:Bind ViewModel.RoleLevel, Mode=OneWay}" />
            </TextBlock>
        </Grid>
        <wuc:SelectorBarSegmented Grid.Column="1" SelectionChanged="SelectorBarSegmented_SelectionChanged">
            <SelectorBarItem IsSelected="True" Tag="Weapon">
                <SelectorBarItem.Icon>
                    <FontIcon FontFamily="{ThemeResource RoilDetilyFont}" Glyph="&#xE615;" />
                </SelectorBarItem.Icon>
            </SelectorBarItem>
            <SelectorBarItem Tag="PhantomData">
                <SelectorBarItem.Icon>
                    <FontIcon FontFamily="{ThemeResource RoilDetilyFont}" Glyph="&#xE6E3;" />
                </SelectorBarItem.Icon>
            </SelectorBarItem>
            <SelectorBarItem Tag="Chain">
                <SelectorBarItem.Icon>
                    <FontIcon FontFamily="{ThemeResource RoilDetilyFont}" Glyph="&#xE67C;" />
                </SelectorBarItem.Icon>
            </SelectorBarItem>
        </wuc:SelectorBarSegmented>
        <!--  武器  -->
        <Grid
            Grid.Row="1"
            Grid.Column="1"
            Margin="0,5,0,0"
            Padding="8"
            Style="{ThemeResource GridPanel}"
            Visibility="{x:Bind ViewModel.WeaponVisibility, Mode=OneWay}">
            <Grid.Transitions>
                <TransitionCollection>
                    <RepositionThemeTransition />
                </TransitionCollection>
            </Grid.Transitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid>
                <Grid.Transitions>
                    <TransitionCollection>
                        <RepositionThemeTransition />
                    </TransitionCollection>
                </Grid.Transitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid
                    Width="100"
                    Height="100"
                    wui:UIElementExtensions.ClipToBounds="True"
                    Background="#292A23"
                    CornerRadius="5">
                    <ui:ImageEx Source="{x:Bind ViewModel.WeaponImage, Mode=OneWay}" Stretch="UniformToFill" />
                    <Border
                        Height="5"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Bottom"
                        Background="{x:Bind ViewModel.WeaponStarLevel, Mode=OneWay, Converter={StaticResource StarLevelColorConverter}}"
                        Canvas.ZIndex="5" />
                </Grid>
                <Grid Grid.Column="1" Padding="8,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <TextBlock FontFamily="{ThemeResource DefaultFont}" FontSize="18">
                        <Run Text="{x:Bind ViewModel.WeaponTypeName, Mode=OneWay}" />
                        <Run Text="・" />
                        <Run Text="{x:Bind ViewModel.WeaponName, Mode=OneWay}" />
                    </TextBlock>
                    <TextBlock
                        Grid.Row="1"
                        Margin="0,5,0,0"
                        FontFamily="{ThemeResource DefaultFont}">
                        <Run Text="等级：" />
                        <Run Text="{x:Bind ViewModel.WeaponLevel, Mode=OneWay}" />
                    </TextBlock>
                    <TextBlock
                        Grid.Row="2"
                        Margin="0,5,0,0"
                        FontFamily="{ThemeResource DefaultFont}">
                        <Run Text="谐振：" />
                        <Run Text="{x:Bind ViewModel.WeaponReason, Mode=OneWay}" />
                    </TextBlock>
                    <TextBlock
                        Grid.Row="3"
                        Margin="0,10,0,0"
                        VerticalAlignment="Top"
                        FontFamily="{ThemeResource DefaultFont}"
                        FontSize="10"
                        IsTextSelectionEnabled="True"
                        MaxLines="3"
                        Text="{x:Bind ViewModel.WeaponSession, Mode=OneWay}"
                        TextTrimming="CharacterEllipsis"
                        TextWrapping="Wrap" />
                </Grid>
            </Grid>

            <FlipView
                Grid.Row="2"
                Margin="0,10,0,0"
                ItemsSource="{x:Bind ViewModel.Skills, Mode=OneWay}">
                <FlipView.ItemTemplate>
                    <DataTemplate x:DataType="model:SkillList">
                        <Grid Margin="5" Padding="20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid wui:UIElementExtensions.ClipToBounds="True" CornerRadius="5">
                                <ui:ImageEx Background="#292A23" Source="{x:Bind Skill.IconUrl, Mode=OneWay}" />
                            </Grid>
                            <Grid Grid.Column="1" Margin="15,0,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <TextBlock FontFamily="{ThemeResource DefaultFont}" FontSize="15">
                                    <Run Text="{x:Bind Skill.Type}" />
                                    <Run Text="-" />
                                    <Run Text="{x:Bind Skill.Name}" />
                                </TextBlock>
                                <TextBlock
                                    Grid.Row="1"
                                    VerticalAlignment="Bottom"
                                    FontFamily="{ThemeResource DefaultFont}"
                                    FontSize="14">
                                    <Run Text="Lv:" />
                                    <Run Text="{x:Bind Level}" />
                                </TextBlock>
                            </Grid>
                            <TextBlock
                                Grid.Row="1"
                                Grid.ColumnSpan="2"
                                Margin="0,15,0,0"
                                CharacterSpacing="4"
                                FontFamily="{ThemeResource DefaultFont}"
                                FontSize="13"
                                IsTextSelectionEnabled="True"
                                Text="{x:Bind Skill.Description}"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="Wrap" />
                        </Grid>
                    </DataTemplate>
                </FlipView.ItemTemplate>

            </FlipView>
        </Grid>
        <!--  武器结束  -->
        <FlipView
            Grid.Row="1"
            Grid.Column="1"
            ItemsSource="{x:Bind ViewModel.PhantomData, Mode=OneWay}"
            Visibility="{x:Bind ViewModel.PhantomDataVisibility, Mode=OneWay}">
            <FlipView.ItemTemplate>
                <DataTemplate x:DataType="model:EquipPhantomList">
                    <Grid Margin="0,5" Padding="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                    </Grid>
                </DataTemplate>
            </FlipView.ItemTemplate>
        </FlipView>
        <!--  声骸  -->


        <!--  声骸结束  -->
        <!--  共鸣链  -->

        <ScrollView
            Grid.Row="1"
            Grid.Column="1"
            Visibility="{x:Bind ViewModel.ChainVisibility, Mode=OneWay}">
            <ItemsRepeater ItemsSource="{x:Bind ViewModel.Chains, Mode=OneWay}">
                <ItemsRepeater.ItemTemplate>
                    <DataTemplate x:DataType="model:ChainList">
                        <Grid
                            Margin="0,5"
                            Padding="10"
                            Style="{ThemeResource GridPanel}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition />
                                <ColumnDefinition Width="auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <ui:ImageEx
                                Grid.RowSpan="2"
                                Width="50"
                                Height="50"
                                Background="#292A23"
                                CornerRadius="5"
                                Source="{x:Bind IconUrl}"
                                Stretch="UniformToFill" />
                            <TextBlock
                                Grid.Column="1"
                                Margin="5,0,0,0"
                                FontFamily="{ThemeResource DefaultFont}"
                                FontSize="13"
                                Text="{x:Bind Name}" />
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="5,0,0,0"
                                FontFamily="{ThemeResource DefaultFont}"
                                FontSize="10"
                                MaxLines="2"
                                Text="{x:Bind Description}"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="Wrap" />
                            <FontIcon
                                Grid.RowSpan="2"
                                Grid.Column="2"
                                Margin="10,0,0,0"
                                FontFamily="Segoe Fluent Icons"
                                Glyph="&#xE8FB;"
                                Visibility="{x:Bind Unlocked, Converter={StaticResource BoolToVisibilityConverter}}" />
                        </Grid>
                    </DataTemplate>
                </ItemsRepeater.ItemTemplate>
            </ItemsRepeater>
        </ScrollView>
        <!--  共鸣链结束  -->
    </Grid>
</Page>
