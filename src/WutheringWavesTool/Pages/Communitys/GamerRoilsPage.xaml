<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="WutheringWavesTool.Pages.Communitys.GamerRoilsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:CommunityToolkit.WinUI.Animations"
    xmlns:b="using:CommunityToolkit.WinUI.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:WutheringWavesTool.Pages.Communitys"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uModel="using:WutheringWavesTool.Models.Wrapper"
    xmlns:ui="using:WutheringWavesTool.Controls"
    xmlns:vModel="using:WutheringWavesTool.Models"
    xmlns:wuc="using:DevWinUI"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel
            Margin="0,-35,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <ComboBox
                Width="100"
                HorizontalAlignment="Stretch"
                ItemsSource="{x:Bind ViewModel.GamerFilter, Mode=OneWay}"
                SelectedItem="{x:Bind ViewModel.SelectFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                <ComboBox.ItemTemplate>
                    <DataTemplate x:DataType="vModel:GamerRoleFilter">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                Margin="5,0,0,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text="{x:Bind DisplayName, Mode=OneWay}" />
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>
        <ScrollView Grid.Row="1">

            <ItemsRepeater ItemsSource="{x:Bind ViewModel.RoleDatas, Mode=OneWay}">
                <ItemsRepeater.ItemTemplate>
                    <DataTemplate x:DataType="uModel:DataCenterRoilItemWrapper">
                        <Border
                            Margin="2,2"
                            Padding="0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultSolid}"
                            BorderThickness="1"
                            CornerRadius="5">
                            <Border.ContextFlyout>
                                <MenuFlyout>
                                    <MenuFlyoutItem Command="{x:Bind ClickShowCommand}" Text="打开详情" />
                                </MenuFlyout>
                            </Border.ContextFlyout>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition Height="auto" />
                                </Grid.RowDefinitions>
                                <Border
                                    Margin="0,3,3,0"
                                    Padding="5,2"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}"
                                    Canvas.ZIndex="2"
                                    CornerRadius="5">
                                    <Viewbox Height="15">
                                        <RatingControl
                                            IsClearEnabled="False"
                                            IsReadOnly="True"
                                            MaxRating="5"
                                            Value="{x:Bind StarLevel}" />
                                    </Viewbox>
                                </Border>
                                <Border
                                    Width="20"
                                    Height="20"
                                    Margin="3,3,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}"
                                    Canvas.ZIndex="2"
                                    CornerRadius="5">
                                    <Image
                                        VerticalAlignment="Top"
                                        Source="{x:Bind TypeImage}"
                                        Stretch="UniformToFill" />
                                </Border>

                                <Border
                                    Grid.RowSpan="3"
                                    Margin="0,8,0,0"
                                    VerticalAlignment="Stretch"
                                    CornerRadius="5">
                                    <Image Source="{x:Bind RoleIconUrl}" Stretch="Uniform" />
                                </Border>
                                <Border
                                    Grid.Row="1"
                                    Padding="5"
                                    Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}">
                                    <StackPanel VerticalAlignment="Center" Orientation="Vertical">
                                        <TextBlock
                                            Grid.Row="1 "
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="12">
                                            <Run Text="{x:Bind AttributeName}" />
                                            <Run Text="●" />
                                            <Run Text="{x:Bind RoleName}" />
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsRepeater.ItemTemplate>
                <ItemsRepeater.Layout>
                    <UniformGridLayout
                        ItemsJustification="Start"
                        ItemsStretch="Uniform"
                        MinColumnSpacing="2"
                        MinItemHeight="130"
                        MinItemWidth="100" />
                </ItemsRepeater.Layout>
                <ItemsRepeater.ItemTransitionProvider>
                    <LinedFlowLayoutItemCollectionTransitionProvider />
                </ItemsRepeater.ItemTransitionProvider>
            </ItemsRepeater>
        </ScrollView>
    </Grid>
</Page>
