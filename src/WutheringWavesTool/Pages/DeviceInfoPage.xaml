<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Haiyu.Pages.DeviceInfoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Haiyu.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:Haiyu.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:qrModel="using:Waves.Api.Models.QRLogin"
    xmlns:vmWrapper="using:Haiyu.ViewModel"
    xmlns:wrapper="using:Waves.Api.Models"
    xmlns:wui="using:CommunityToolkit.WinUI.Controls"
    mc:Ignorable="d">
    <i:Interaction.Behaviors>
        <i:EventTriggerBehavior EventName="Loaded">
            <i:InvokeCommandAction Command="{x:Bind ViewModel.LoadedCommand}" />
        </i:EventTriggerBehavior>
    </i:Interaction.Behaviors>
    <Grid Margin="25,0,25,25">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <controls:TitleBar
            x:Name="title"
            IsExtendsContentIntoTitleBar="True"
            TitleMode="Standard" />
        <wui:Segmented
            x:Name="select"
            Grid.Row="1"
            ItemsSource="{x:Bind ViewModel.Displays, Mode=OneWay}"
            SelectedItem="{x:Bind ViewModel.SelectHeader, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            <wui:Segmented.ItemTemplate>
                <DataTemplate x:DataType="vmWrapper:DeviceInfoDisplayHeader">
                    <TextBlock Text="{x:Bind DisplayName}" />
                </DataTemplate>
            </wui:Segmented.ItemTemplate>
        </wui:Segmented>
        <Button
            Grid.Row="1"
            HorizontalAlignment="Right"
            Content="刷新" />

        <ScrollView Grid.Row="2" Visibility="{x:Bind ViewModel.DeviceInfosVisibility, Mode=OneWay}">
            <ItemsRepeater ItemsSource="{x:Bind ViewModel.Devices, Mode=OneWay}">
                <ItemsRepeater.ItemTemplate>
                    <DataTemplate x:DataType="qrModel:DeviceDatum">
                        <wui:SettingsExpander
                            Margin="0,10,0,0"
                            Description="{x:Bind AuthDeviceNo}"
                            Header="{x:Bind DeviceName}"
                            ItemsSource="{x:Bind DeviceRoles}">
                            <wui:SettingsExpander.ItemTemplate>
                                <DataTemplate x:DataType="qrModel:DeviceRole">
                                    <wui:SettingsCard Header="{x:Bind Puid}" IsClickEnabled="False">
                                        <wui:SettingsCard.Description>
                                            <TextBlock>
                                                <Run Text="自动登陆" />
                                                <Run Text="{x:Bind AutoLogin}" />
                                            </TextBlock>
                                        </wui:SettingsCard.Description>
                                    </wui:SettingsCard>
                                </DataTemplate>
                            </wui:SettingsExpander.ItemTemplate>
                        </wui:SettingsExpander>
                    </DataTemplate>
                </ItemsRepeater.ItemTemplate>
            </ItemsRepeater>
        </ScrollView>
        <ScrollView
            Grid.Row="2"
            Margin="0,10,0,0"
            Visibility="{x:Bind ViewModel.GamerRoleVisibility, Mode=OneWay}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <ComboBox
                    HorizontalAlignment="Stretch"
                    ItemsSource="{x:Bind ViewModel.Gamers, Mode=OneWay}"
                    SelectedItem="{x:Bind ViewModel.SelectGamer, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate x:DataType="vmWrapper:GamerId">
                            <TextBlock Text="{x:Bind DisplayName}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <ComboBox
                    Grid.Row="1"
                    Margin="0,10,0,0"
                    HorizontalAlignment="Stretch"
                    ItemsSource="{x:Bind ViewModel.UserServers, Mode=OneWay}"
                    SelectedItem="{x:Bind ViewModel.SelectUserServer, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate x:DataType="wrapper:AddUserDatum">
                            <TextBlock Text="{x:Bind ServerName}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <TextBox
                    Grid.Row="2"
                    Margin="0,10,0,0"
                    PlaceholderText="输入游戏UID"
                    Text="{x:Bind ViewModel.BindRoleId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <Grid Grid.Row="3" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <TextBox PlaceholderText="游戏邮件内查看" Text="{x:Bind ViewModel.VerifyCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <Button
                        Grid.Column="1"
                        Margin="5,0,0,0"
                        VerticalAlignment="Center"
                        Command="{x:Bind ViewModel.SendVerifyCodeCommand}"
                        Content="发送验证码" />
                </Grid>
                <CheckBox
                    Grid.Row="4"
                    HorizontalAlignment="Center"
                    Content="如果账号已被绑定则换绑到当前账号上"
                    IsChecked="{x:Bind ViewModel.BindCheck, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    IsEnabled="False" />
                <TextBlock
                    Grid.Row="5"
                    HorizontalAlignment="Center"
                    FontFamily="{ThemeResource DefaultFont}"
                    FontSize="15"
                    Text="{x:Bind ViewModel.TipMessage, Mode=OneWay}" />
                <Button
                    Grid.Row="6"
                    HorizontalAlignment="Center"
                    Command="{x:Bind ViewModel.BindGameCodeCommand}"
                    Content="绑定角色" />
            </Grid>
        </ScrollView>
    </Grid>
</Page>
