<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="WutheringWavesTool.Pages.DeviceInfoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:WutheringWavesTool.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:WutheringWavesTool.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:qrModel="using:Waves.Api.Models.QRLogin"
    xmlns:ui="using:DevWinUI"
    xmlns:vmWrapper="using:WutheringWavesTool.ViewModel"
    xmlns:wui="using:CommunityToolkit.WinUI.Controls"
    mc:Ignorable="d">
    <i:Interaction.Behaviors>
        <i:EventTriggerBehavior EventName="Loaded">
            <i:InvokeCommandAction Command="{x:Bind ViewModel.LoadedCommand}" />
        </i:EventTriggerBehavior>
    </i:Interaction.Behaviors>
    <Grid Margin="25,0,25,25">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <controls:TitleBar
            x:Name="title"
            IsExtendsContentIntoTitleBar="True"
            TitleMode="Standard" />
        <wui:Segmented
            x:Name="select"
            Grid.Row="1"
            ItemsSource="{x:Bind ViewModel.Displays, Mode=OneWay}"
            SelectedItem="{x:Bind ViewModel.SelectHeader, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            Style="{ThemeResource TokenViewSelectorBarStyle}">
            <wui:Segmented.ItemTemplate>
                <DataTemplate x:DataType="vmWrapper:DeviceInfoDisplayHeader">
                    <TextBlock Text="{x:Bind DisplayName}" />
                </DataTemplate>
            </wui:Segmented.ItemTemplate>
        </wui:Segmented>
        <Button
            Grid.Row="1"
            HorizontalAlignment="Right"
            Content="刷新" />

        <ScrollView Grid.Row="2" Visibility="{x:Bind ViewModel.DeviceInfosVisibility, Mode=OneWay}">
            <ItemsRepeater ItemsSource="{x:Bind ViewModel.Devices, Mode=OneWay}">
                <ItemsRepeater.ItemTemplate>
                    <DataTemplate x:DataType="qrModel:DeviceDatum">
                        <ui:SettingsExpander
                            Margin="0,10,0,0"
                            Description="{x:Bind AuthDeviceNo}"
                            Header="{x:Bind DeviceName}"
                            ItemsSource="{x:Bind DeviceRoles}">
                            <ui:SettingsExpander.ItemTemplate>
                                <DataTemplate x:DataType="qrModel:DeviceRole">
                                    <ui:SettingsCard Header="{x:Bind Puid}" IsClickEnabled="False">
                                        <ui:SettingsCard.Description>
                                            <TextBlock>
                                                <Run Text="自动登陆" />
                                                <Run Text="{x:Bind AutoLogin}" />
                                            </TextBlock>
                                        </ui:SettingsCard.Description>
                                    </ui:SettingsCard>
                                </DataTemplate>
                            </ui:SettingsExpander.ItemTemplate>
                        </ui:SettingsExpander>
                    </DataTemplate>
                </ItemsRepeater.ItemTemplate>
            </ItemsRepeater>
        </ScrollView>
        <ScrollView Grid.Row="2" Visibility="{x:Bind ViewModel.GamerRoleVisibility, Mode=OneWay}">
            <Grid />
        </ScrollView>
    </Grid>
</Page>
