<Page
    x:Class="WutheringWavesTool.Pages.Record.AnalysisRecordPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:WutheringWavesTool.Pages.Record"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:Haiyu.Controls"
    mc:Ignorable="d">
    <i:Interaction.Behaviors>
        <i:EventTriggerBehavior EventName="Loaded">
            <i:InvokeCommandAction Command="{x:Bind ViewModel.LoadedCommand}" />
        </i:EventTriggerBehavior>
    </i:Interaction.Behaviors>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <ui:TitleBar
            x:Name="titlebar"
            x:FieldModifier="public"
            IsExtendsContentIntoTitleBar="True"
            TitleMode="Tall">
            <ui:TitleBar.Title>
                <TextBlock
                    Margin="15,0,0,0"
                    VerticalAlignment="Center"
                    FontFamily="{ThemeResource DefaultFont}"
                    FontSize="17"
                    Text="分析面板" />
            </ui:TitleBar.Title>
        </ui:TitleBar>
        <Grid
            Grid.Row="1"
            Padding="10"
            CornerRadius="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="7*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Border
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="5">
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <ui:ImageEx
                        Width="80"
                        Height="80"
                        CornerRadius="60"
                        Source="https://mc.kurogames.com/cloud/assets/avatar-cb06ab22.png" />
                    <TextBlock
                        Grid.Row="1"
                        Margin="0,30,0,0"
                        HorizontalAlignment="Center"
                        FontSize="25"
                        Text="UserName" />
                </Grid>
            </Border>
            <StackPanel
                Grid.Row="1"
                Margin="0,5,0,0"
                Padding="20"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="5"
                Orientation="Vertical">
                <StackPanel HorizontalAlignment="Stretch" Orientation="Vertical">
                    <TextBlock Text="活动角色唤取" />
                    <ProgressBar
                        MinHeight="15"
                        Maximum="80"
                        Style="{ThemeResource FillHeightProgressBar}"
                        Value="10" />
                </StackPanel>
                <StackPanel
                    Margin="0,10,0,0"
                    HorizontalAlignment="Stretch"
                    Orientation="Vertical">
                    <TextBlock Text="活动武器唤取" />
                    <ProgressBar
                        MinHeight="15"
                        Maximum="80"
                        Style="{ThemeResource FillHeightProgressBar}"
                        Value="10" />
                </StackPanel>
                <StackPanel
                    Margin="0,10,0,0"
                    HorizontalAlignment="Stretch"
                    Orientation="Vertical">
                    <TextBlock Text="常驻角色唤取" />
                    <ProgressBar
                        MinHeight="15"
                        Maximum="80"
                        Style="{ThemeResource FillHeightProgressBar}"
                        Value="10" />
                </StackPanel>
                <StackPanel
                    Margin="0,10,0,0"
                    HorizontalAlignment="Stretch"
                    Orientation="Vertical">
                    <TextBlock Text="常驻武器唤取" />
                    <ProgressBar
                        MinHeight="15"
                        Maximum="80"
                        Style="{ThemeResource FillHeightProgressBar}"
                        Value="10" />
                </StackPanel>
            </StackPanel>
            <Grid
                Grid.RowSpan="2"
                Grid.Column="1"
                Margin="5,0,0,0"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="5">
                <ScrollView />
            </Grid>
        </Grid>
    </Grid>
</Page>
