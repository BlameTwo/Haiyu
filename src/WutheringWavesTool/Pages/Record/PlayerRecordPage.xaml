<Page
    x:Class="WutheringWavesTool.Pages.Record.PlayerRecordPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:WutheringWavesTool.Pages.Record"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:WutheringWavesTool.Controls"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <ui:TitleBar
            x:Name="titleBar"
            IsExtendsContentIntoTitleBar="True"
            TitleMode="Tall">
            <ui:TitleBar.Header>
                <MenuBar>
                    <MenuBarItem Title="菜单">
                        <MenuFlyoutItem Command="{x:Bind ViewModel.ShowInputRecordCommand}" Text="导入抽卡记录">
                            <MenuFlyoutItem.Icon>
                                <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8B5;" />
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                    </MenuBarItem>
                    <MenuBarItem Title="抽卡记录" />
                    <MenuBarItem Title="关于" />
                </MenuBar>
            </ui:TitleBar.Header>
        </ui:TitleBar>
        <Grid x:Name="grid" Grid.Row="1" />
    </Grid>
</Page>
