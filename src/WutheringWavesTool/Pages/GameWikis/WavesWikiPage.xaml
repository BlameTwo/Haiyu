<Page
    x:Class="Haiyu.Pages.GameWikis.WavesWikiPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:Haiyu.Pages.GameWikis"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:source="using:Waves.Api.Models.Communitys.DataCenter"
    xmlns:ui="using:Haiyu.Controls"
    xmlns:wiki="using:Waves.Api.Models.GameWikiiClient"
    xmlns:wikiModel="using:Haiyu.Models.Wrapper.Wiki"
    xmlns:wrapper="using:Haiyu.Models.Wrapper"
    xmlns:wuc="using:CommunityToolkit.WinUI.Controls"
    mc:Ignorable="d">
    <i:Interaction.Behaviors>
        <i:EventTriggerBehavior EventName="Loaded">
            <i:InvokeCommandAction Command="{x:Bind ViewModel.LoadedCommand}" />
        </i:EventTriggerBehavior>
    </i:Interaction.Behaviors>
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ChildrenTransitions>
                <TransitionCollection>
                    <RepositionThemeTransition />
                </TransitionCollection>
            </Grid.ChildrenTransitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <StackPanel HorizontalAlignment="Stretch" Orientation="Vertical">
                <TextBlock
                    Margin="5,0,0,0"
                    FontFamily="{ThemeResource DefaultFont}"
                    FontSize="20"
                    Text="当前活动" />
                <ScrollViewer
                    Padding="0,0,0,10"
                    VerticalAlignment="Top"
                    HorizontalScrollBarVisibility="Visible"
                    HorizontalScrollMode="Enabled"
                    VerticalScrollMode="Disabled">
                    <ItemsControl ItemsSource="{x:Bind ViewModel.Sides, Mode=OneWay}">
                        <ItemsControl.ItemContainerTransitions>
                            <TransitionCollection>

                                <AddDeleteThemeTransition />
                            </TransitionCollection>
                        </ItemsControl.ItemContainerTransitions>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="wikiModel:HotContentSideWrapper">
                                <ui:DraggableCardControl Margin="5" CornerRadius="5">
                                    <Grid Padding="5" BorderThickness="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition Height="auto" />
                                        </Grid.RowDefinitions>
                                        <ui:ImageEx
                                            Width="120"
                                            Height="120"
                                            CornerRadius="5"
                                            Source="{x:Bind ImageUrl}"
                                            Stretch="Uniform" />
                                        <Grid Grid.Column="1" Margin="8,0,0,0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="auto" />
                                                <RowDefinition Height="auto" />
                                                <RowDefinition Height="auto" />
                                                <RowDefinition />
                                            </Grid.RowDefinitions>
                                            <TextBlock
                                                FontFamily="{ThemeResource DefaultFont}"
                                                FontSize="17"
                                                Text="{x:Bind Title}" />
                                            <TextBlock
                                                Grid.Row="1"
                                                Margin="0,10,0,0"
                                                FontSize="15"
                                                Text="{x:Bind StartTime}" />
                                            <TextBlock
                                                Grid.Row="2"
                                                Margin="0,10,0,0"
                                                FontSize="15"
                                                Text="{x:Bind EndTime}" />
                                            <TextBlock Grid.Row="3" VerticalAlignment="Bottom">
                                                <Run Foreground="{ThemeResource AccentAAFillColorDefaultBrush}" Text="{x:Bind Message, Mode=OneWay}" />
                                                <Run Text="" />
                                                <Run Text="{x:Bind TotalSpan}" />
                                            </TextBlock>
                                        </Grid>
                                        <ProgressBar
                                            Grid.Row="1"
                                            Grid.ColumnSpan="2"
                                            Margin="0,5,0,0"
                                            HorizontalAlignment="Stretch"
                                            Maximum="{x:Bind MaxProgress, Mode=OneWay}"
                                            Value="{x:Bind CurrentProgress, Mode=OneWay}" />
                                    </Grid>
                                </ui:DraggableCardControl>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ScrollViewer>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*" />
                    <ColumnDefinition Width="6*" />
                </Grid.ColumnDefinitions>
                <Border
                    Margin="5"
                    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                    BorderBrush="{ThemeResource SystemColorGrayTextBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Visibility="{x:Bind ViewModel.KuroLogin, Mode=OneWay, Converter={StaticResource BoolToVisibilityReversalConverter}}">
                    <StackPanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Vertical">
                        <TextBlock Text="未登录或登陆过期" />
                    </StackPanel>
                </Border>
                <Border
                    Margin="5"
                    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                    BorderBrush="{ThemeResource SystemColorGrayTextBrush}"
                    BorderThickness="1"
                    Visibility="{x:Bind ViewModel.KuroLogin, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                    <FlipView
                        Grid.Column="0"
                        ItemsSource="{x:Bind ViewModel.Staminas, Mode=OneWay}"
                        Style="{ThemeResource DefaultFlipViewStyle}">
                        <FlipView.ItemTemplate>
                            <DataTemplate x:DataType="wrapper:StaminaWrapper">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="auto" />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <Grid
                                        Margin="5,5,5,0"
                                        Padding="8"
                                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultSolid}"
                                        BorderThickness="1"
                                        CornerRadius="5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto" />
                                            <ColumnDefinition />
                                            <ColumnDefinition Width="auto" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <ui:ImageEx
                                            Width="35"
                                            Height="35"
                                            Source="ms-appx:///Assets/GameIcons/global.ico" />
                                        <StackPanel
                                            Grid.Column="1"
                                            Margin="5,0,0,0"
                                            Orientation="Horizontal">
                                            <TextBlock
                                                VerticalAlignment="Center"
                                                FontSize="18"
                                                Text="{x:Bind Name}" />
                                            <Border
                                                Grid.Column="1"
                                                Margin="5,0,0,0"
                                                Padding="3"
                                                VerticalAlignment="Center"
                                                Background="{ThemeResource AccentAAFillColorDefaultBrush}"
                                                CornerRadius="2"
                                                ToolTipService.ToolTip="{x:Bind CreateTime}"
                                                Visibility="{x:Bind IsShowTime}">
                                                <TextBlock
                                                    FontSize="12"
                                                    Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"
                                                    Text="开服玩家" />
                                            </Border>
                                            <Border
                                                Grid.Column="1"
                                                Margin="5,0,0,0"
                                                Padding="3"
                                                VerticalAlignment="Center"
                                                Background="{ThemeResource AccentAAFillColorDefaultBrush}"
                                                CornerRadius="2"
                                                ToolTipService.ToolTip="{x:Bind CreateTime}">
                                                <TextBlock FontSize="12" Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}">
                                                    <Run Text="活跃天数:" />
                                                    <Run Text="{x:Bind ActiveDays}" />
                                                </TextBlock>
                                            </Border>
                                        </StackPanel>
                                        <TextBlock
                                            Grid.Column="2"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            FontFamily="{ThemeResource DefaultFont}"
                                            TextAlignment="Center">
                                            <Run Text="Level:" />
                                            <Run
                                                FontSize="17"
                                                FontWeight="Bold"
                                                Foreground="{ThemeResource AccentAAFillColorDefaultBrush}"
                                                Text="{x:Bind UserLevel}" />
                                        </TextBlock>
                                    </Grid>
                                    <Grid Grid.Row="1" Padding="5">
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Border
                                            Margin="0,0,3,0"
                                            Padding="8"
                                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                            CornerRadius="2">
                                            <Grid Grid.Row="1">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="48" />
                                                    <RowDefinition />
                                                </Grid.RowDefinitions>
                                                <StackPanel Grid.Column="1" Orientation="Vertical">
                                                    <TextBlock HorizontalAlignment="Center" TextAlignment="Center">
                                                        <Run
                                                            FontSize="18"
                                                            FontWeight="Bold"
                                                            Foreground="{ThemeResource AccentAAFillColorDefaultBrush}"
                                                            Text="{x:Bind Energy}" />
                                                        <LineBreak />
                                                        <Run Text="{x:Bind MaxEnergy}" />
                                                    </TextBlock>
                                                </StackPanel>
                                                <TextBlock
                                                    Grid.Row="1"
                                                    Grid.ColumnSpan="2"
                                                    HorizontalAlignment="Center"
                                                    FontFamily="{ThemeResource DefaultFont}"
                                                    Text="结晶波片" />
                                            </Grid>
                                        </Border>
                                        <Border
                                            Grid.Column="1"
                                            Margin="0,0,3,0"
                                            Padding="8"
                                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                            CornerRadius="2">
                                            <Grid Grid.Row="1">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="48" />
                                                    <RowDefinition />
                                                </Grid.RowDefinitions>
                                                <StackPanel Grid.Column="1" Orientation="Vertical">
                                                    <TextBlock HorizontalAlignment="Center" TextAlignment="Center">
                                                        <Run
                                                            FontSize="18"
                                                            FontWeight="Bold"
                                                            Foreground="{ThemeResource AccentAAFillColorDefaultBrush}"
                                                            Text="{x:Bind StoreEnergy}" />
                                                        <LineBreak />
                                                        <Run Text="{x:Bind MaxStoreEnergy}" />
                                                    </TextBlock>
                                                </StackPanel>
                                                <TextBlock
                                                    Grid.Row="1"
                                                    Grid.ColumnSpan="2"
                                                    HorizontalAlignment="Center"
                                                    FontFamily="{ThemeResource DefaultFont}"
                                                    Text="结晶单质" />
                                            </Grid>
                                        </Border>
                                        <Border
                                            Grid.Column="2"
                                            Margin="0,0,3,0"
                                            Padding="8"
                                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                            CornerRadius="2">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="48" />
                                                    <RowDefinition />
                                                </Grid.RowDefinitions>

                                                <StackPanel Grid.Column="1" Orientation="Vertical">
                                                    <TextBlock HorizontalAlignment="Center" TextAlignment="Center">
                                                        <Run
                                                            FontSize="18"
                                                            FontWeight="Bold"
                                                            Foreground="{ThemeResource AccentAAFillColorDefaultBrush}"
                                                            Text="{x:Bind Liveness}" />
                                                        <LineBreak />
                                                        <Run Text="{x:Bind MaxLiveness}" />
                                                    </TextBlock>
                                                </StackPanel>
                                                <TextBlock
                                                    Grid.Row="1"
                                                    Grid.ColumnSpan="2"
                                                    HorizontalAlignment="Center"
                                                    FontFamily="{ThemeResource DefaultFont}"
                                                    Text="活跃度" />
                                            </Grid>
                                        </Border>
                                        <Grid
                                            Grid.Row="1"
                                            Grid.ColumnSpan="3"
                                            Margin="0,5,0,0"
                                            Padding="8"
                                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                            CornerRadius="3">
                                            <Grid.RowDefinitions>
                                                <RowDefinition />
                                                <RowDefinition />
                                            </Grid.RowDefinitions>
                                            <TextBlock
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                Text="千道门扉的异想"
                                                TextAlignment="Center" />
                                            <ProgressBar
                                                Grid.Row="1"
                                                Margin="0,5,0,0"
                                                HorizontalAlignment="Stretch"
                                                Maximum="{x:Bind MaxRougeScore}"
                                                Value="{x:Bind RougeScore}" />
                                            <TextBlock
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                TextAlignment="Center">
                                                <Run
                                                    FontSize="20"
                                                    Foreground="{ThemeResource AccentAAFillColorDefaultBrush}"
                                                    Text="{x:Bind RougeScore}" />
                                                <Run Text="/" />
                                                <Run Text="{x:Bind MaxRougeScore}" />
                                            </TextBlock>
                                        </Grid>
                                        <Grid
                                            Grid.Row="2"
                                            Grid.ColumnSpan="3"
                                            Margin="0,5,0,0"
                                            Padding="8"
                                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                            CornerRadius="3">
                                            <Grid.RowDefinitions>
                                                <RowDefinition />
                                                <RowDefinition />
                                            </Grid.RowDefinitions>
                                            <TextBlock
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                Text="战歌重奏收取次数"
                                                TextAlignment="Center" />
                                            <ProgressBar
                                                Grid.Row="1"
                                                Margin="0,5,0,0"
                                                HorizontalAlignment="Stretch"
                                                Maximum="{x:Bind MaxWeekyInstCount}"
                                                Value="{x:Bind WeekyInstCount}" />
                                            <TextBlock
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                TextAlignment="Center">
                                                <Run
                                                    FontSize="20"
                                                    Foreground="{ThemeResource AccentAAFillColorDefaultBrush}"
                                                    Text="{x:Bind WeekyInstCount}" />
                                                <Run Text="/" />
                                                <Run Text="{x:Bind MaxWeekyInstCount}" />
                                            </TextBlock>
                                        </Grid>
                                    </Grid>
                                    <Grid Grid.Row="2">
                                        <ScrollViewer
                                            HorizontalScrollBarVisibility="Visible"
                                            HorizontalScrollMode="Enabled"
                                            VerticalScrollMode="Disabled">
                                            <ItemsRepeater ItemsSource="{x:Bind BoxList}">
                                                <ItemsRepeater.ItemTemplate>
                                                    <DataTemplate x:DataType="source:BoxList">
                                                        <Grid
                                                            Margin="2,0"
                                                            Padding="8"
                                                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition />
                                                                <RowDefinition />
                                                            </Grid.RowDefinitions>
                                                            <TextBlock
                                                                FontSize="17"
                                                                FontWeight="Bold"
                                                                Text="{x:Bind Num}"
                                                                TextAlignment="Center" />
                                                            <TextBlock
                                                                Grid.Row="1"
                                                                Margin="0,5,0,0"
                                                                Text="{x:Bind BoxName}"
                                                                TextAlignment="Center" />
                                                        </Grid>
                                                    </DataTemplate>
                                                </ItemsRepeater.ItemTemplate>
                                                <ItemsRepeater.Layout>
                                                    <StackLayout Orientation="Horizontal" />
                                                </ItemsRepeater.Layout>
                                            </ItemsRepeater>
                                        </ScrollViewer>
                                    </Grid>
                                </Grid>
                            </DataTemplate>
                        </FlipView.ItemTemplate>
                    </FlipView>
                </Border>
                <Grid Grid.Column="1" Margin="0,5,5,5">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid
                        Grid.RowSpan="2"
                        Padding="5"
                        Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                        BorderBrush="{ThemeResource SystemColorGrayTextBrush}"
                        BorderThickness="1"
                        CornerRadius="4">
                        <StackPanel
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Vertical">
                            <TextBlock
                                FontFamily="{ThemeResource DefaultFont}"
                                FontSize="18"
                                Text="更多请查看鸣潮Wiki" />
                            <HyperlinkButton
                                Margin="0,5,0,0"
                                HorizontalAlignment="Center"
                                Content="前往"
                                NavigateUri="https://wiki.kurobbs.com/mc/home" />
                        </StackPanel>
