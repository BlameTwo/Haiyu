<?xml version="1.0" encoding="utf-8" ?>
<ContentDialog
    x:Class="WutheringWavesTool.Pages.Dialogs.SelectWallpaperDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:WutheringWavesTool.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:item="using:WutheringWavesTool.Models"
    xmlns:local="using:WutheringWavesTool.Pages.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    CornerRadius="5"
    RequestedTheme="Dark"
    mc:Ignorable="d">
    <i:Interaction.Behaviors>
        <i:EventTriggerBehavior EventName="Loaded">
            <i:InvokeCommandAction Command="{x:Bind ViewModel.LoadedCommand}" />
        </i:EventTriggerBehavior>
    </i:Interaction.Behaviors>
    <Grid Width="470" Height="500">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock
                VerticalAlignment="Center"
                FontSize="15"
                Text="选择或导入壁纸" />
            <Button
                HorizontalAlignment="Right"
                Command="{x:Bind ViewModel.CloseCommand}"
                Style="{ThemeResource TransparentButtonStyle}">
                <FontIcon
                    FontFamily="Segoe Fluent Icons"
                    FontSize="14"
                    Glyph="&#xE894;" />
            </Button>
            <ScrollView Grid.Row="1">
                <ItemsView
                    IsItemInvokedEnabled="True"
                    ItemInvoked="ItemsView_ItemInvoked"
                    ItemsSource="{x:Bind ViewModel.Images, Mode=OneWay}"
                    SelectionMode="None">
                    <ItemsView.ItemTemplate>
                        <DataTemplate x:DataType="item:WallpaperModel">
                            <ItemContainer>
                                <controls:ImageEx
                                    Margin="5"
                                    DecodePixelHeight="200"
                                    DecodePixelWidth="200"
                                    Source="{x:Bind Image}"
                                    Stretch="UniformToFill" />
                            </ItemContainer>
                        </DataTemplate>
                    </ItemsView.ItemTemplate>
                    <ItemsView.Layout>
                        <LinedFlowLayout
                            ItemsStretch="Fill"
                            LineHeight="100"
                            LineSpacing="5"
                            MinItemSpacing="2" />
                    </ItemsView.Layout>
                </ItemsView>
            </ScrollView>
        </Grid>
    </Grid>
</ContentDialog>
