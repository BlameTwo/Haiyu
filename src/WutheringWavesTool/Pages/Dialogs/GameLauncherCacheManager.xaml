<?xml version="1.0" encoding="utf-8" ?>
<ContentDialog
    x:Class="Haiyu.Pages.Dialogs.GameLauncherCacheManager"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Haiyu.Pages.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:um="using:Waves.Api.Models.Launcher"
    CornerRadius="5"
    RequestedTheme="Dark"
    mc:Ignorable="d">

    <Grid Height="300">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock
            Margin="5,5,0,0"
            FontFamily="{ThemeResource DefaultFont}"
            FontSize="18"
            Text="登陆信息" />
        <Button
            Margin="0,0,0,0"
            HorizontalAlignment="Right"
            Command="{x:Bind ViewModel.CloseCommand}"
            CornerRadius="50"
            Style="{ThemeResource TransparentButtonStyle}">
            <FontIcon
                FontFamily="{ThemeResource FluentIcon}"
                FontSize="12"
                Glyph="&#xE653;" />
        </Button>
        <ScrollView Grid.Row="1" Margin="0,10,0,0">
            <ItemsRepeater ItemsSource="{x:Bind ViewModel.Items, Mode=OneWay}">
                <ItemsRepeater.ItemTemplate>
                    <DataTemplate x:DataType="um:KRSDKLauncherCache">
                        <Grid
                            Padding="8"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            CornerRadius="5">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{x:Bind Username}" />
                            <TextBlock
                                Grid.Row="1"
                                Margin="0,5,0,0"
                                FontSize="10"
                                Foreground="{ThemeResource SystemChromeGrayColor}"
                                Text="{x:Bind Cuid}" />
                            <Button
                                Grid.RowSpan="2"
                                Grid.Column="1"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                ToolTipService.ToolTip="复制游戏登陆码"
                                Command="{x:Bind CopyOAuthCodeCommand}"
                                Style="{ThemeResource TransparentButtonStyle}">
                                <FontIcon
                                    FontFamily="{ThemeResource FluentIcon}"
                                    FontSize="15"
                                    Glyph="&#xE8C8;" />
                            </Button>
                        </Grid>
                    </DataTemplate>
                </ItemsRepeater.ItemTemplate>
            </ItemsRepeater>
        </ScrollView>
    </Grid>
</ContentDialog>
