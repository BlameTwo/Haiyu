<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Haiyu.Pages.ShellPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ani="using:CommunityToolkit.WinUI.Animations"
    xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
    xmlns:b="using:CommunityToolkit.WinUI.Behaviors"
    xmlns:bs="using:Haiyu.Behaviors"
    xmlns:control="using:Haiyu.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:Haiyu.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:media="using:CommunityToolkit.WinUI.Media"
    xmlns:property="using:Haiyu.Controls.Propertys"
    xmlns:selector="using:Haiyu.Controls.Selector"
    xmlns:ui="using:Haiyu.Controls"
    xmlns:wrapper="using:Haiyu.Models.Wrapper"
    xmlns:wui="using:CommunityToolkit.WinUI"
    property:CursorProperty.CursorName="{x:Bind ViewModel.CursorName, Mode=OneWay}"
    property:CursorProperty.CursorType="Normal"
    mc:Ignorable="d">
    <i:Interaction.Behaviors>
        <i:EventTriggerBehavior EventName="Loaded">
            <i:InvokeCommandAction Command="{x:Bind ViewModel.LoadedCommand}" />
        </i:EventTriggerBehavior>
    </i:Interaction.Behaviors>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <ui:NotifyIconWinUI x:Name="notify" ContextMenu="{x:Bind ViewModel.SystemMenu, Mode=OneWay}" />
        <Border x:Name="titleback" Grid.RowSpan="1" />
        <ui:TitleBar
            x:Name="titlebar"
            x:FieldModifier="public"
            Canvas.ZIndex="2"
            FooterVerticalAlignment="Center"
            IsExtendsContentIntoTitleBar="True"
            TitleMode="Tall">
            <ui:TitleBar.Header>
                <StackPanel
                    x:Name="userControl"
                    Margin="0,0,0,0"
                    HorizontalAlignment="Left"
                    Orientation="Horizontal">
                    <Button
                        Width="60"
                        Margin="0,0,0,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        BorderThickness="0"
                        Style="{ThemeResource DefaultAcrylicButtonStyle}">
                        <ui:ImageEx
                            Width="25"
                            Height="25"
                            Margin="0,0,0,0"
                            VerticalAlignment="Center"
                            Source="ms-appx:///Assets/appLogo.ico"
                            Stretch="UniformToFill" />
                    </Button>
                    <Button
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        Command="{x:Bind ViewModel.LoginCommand}"
                        CornerRadius="5"
                        Style="{ThemeResource DefaultAcrylicButtonStyle}"
                        ToolTipService.ToolTip="登录"
                        Visibility="{x:Bind ViewModel.LoginBthVisibility, Mode=OneWay}">
                        <FontIcon
                            FontFamily="Segoe Fluent Icons"
                            FontSize="14"
                            Glyph="&#xE631;" />
                    </Button>
                    <ComboBox
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        ItemsSource="{x:Bind ViewModel.Roles, Mode=OneWay}"
                        SelectedItem="{x:Bind ViewModel.SelectRoles, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        SizeChanged="ComboBox_SizeChanged"
                        Style="{ThemeResource AcrylicComboBoxStyle}"
                        ToolTipService.ToolTip="选择角色"
                        Visibility="{x:Bind ViewModel.GamerRoleListsVisibility, Mode=OneWay}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate x:DataType="wrapper:GameRoilDataWrapper">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Border CornerRadius="5">
                                        <Image
                                            Width="25"
                                            Height="25"
                                            Source="{x:Bind GameHeadUrl}" />
                                    </Border>
                                    <Grid
                                        Grid.Column="1"
                                        Margin="10,0,0,0"
                                        VerticalAlignment="Center">
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{x:Bind RoleName}" />
                                        <TextBlock
                                            Grid.Column="1"
                                            VerticalAlignment="Center"
                                            FontSize="10">
                                            <Run Text="-" />
                                            <Run Text="{x:Bind ServerName}" />
                                        </TextBlock>
                                    </Grid>
                                </Grid>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <Button
                        Margin="5,0,0,0"
                        Padding="8"
                        VerticalAlignment="Center"
                        Command="{x:Bind ViewModel.RefreshRoleListsCommand}"
                        CornerRadius="5"
                        Style="{ThemeResource DefaultAcrylicButtonStyle}"
                        Visibility="{x:Bind ViewModel.GamerRoleListsVisibility, Mode=OneWay}">
                        <FontIcon
                            FontFamily="Segoe Fluent Icons"
                            FontSize="18"
                            Glyph="&#xE72C;" />
                    </Button>
                    <Button
                        Margin="5,0,0,0"
                        Padding="7"
                        VerticalAlignment="Center"
                        CornerRadius="3"
                        Style="{ThemeResource DefaultAcrylicButtonStyle}"
                        ToolTipService.ToolTip="工具箱"
                        Visibility="{x:Bind ViewModel.GamerRoleListsVisibility, Mode=OneWay}">
                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE712;" />
                        <Button.Flyout>
                            <MenuFlyout Placement="Bottom">
                                <MenuFlyoutItem Command="{x:Bind ViewModel.OpenSignWindowCommand}" Text="签到">

                                    <MenuFlyoutItem.Icon>
                                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE929;" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutSeparator />
                                <MenuFlyoutItem Command="{x:Bind ViewModel.OpenScreenCaptureCommand}" Text="扫描屏幕登录游戏">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xED14;" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem Command="{x:Bind ViewModel.ShowDeviceInfoCommand}" Text="授权管理">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8CC;" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutSeparator />
                                <MenuFlyoutItem
                                    Command="{x:Bind ViewModel.UnLoginCommand}"
                                    Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                                    Text="退出登录">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xF3B1;" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                            </MenuFlyout>
                        </Button.Flyout>
                    </Button>
                </StackPanel>
            </ui:TitleBar.Header>
            <ui:TitleBar.Footer>
                <StackPanel Orientation="Horizontal">
                    <Button
                        Margin="5,0,0,0"
                        BorderBrush="{ThemeResource AccentAAFillColorDisabled}"
                        BorderThickness="1"
                        CornerRadius="5"
                        Style="{ThemeResource DefaultAcrylicButtonStyle}"
                        ToolTipService.ToolTip="溢彩画（测试）"
                        Visibility="Collapsed">
                        <FontIcon
                            FontFamily="Segoe Fluent Icons"
                            FontSize="14"
                            Glyph="&#xF354;" />
                        <Button.Flyout>
                            <MenuFlyout Placement="Bottom">
                                <MenuFlyoutItem Text="导入关卡包">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8B5;" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem Text="导入单个关卡">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8B5;" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutSeparator />
                                <MenuFlyoutItem Command="{x:Bind ViewModel.OpenColorGameCommand}" Text="编辑器">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE70F;" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem Command="{x:Bind ViewModel.OpenStartColorGameCommand}" Text="开始游戏">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE7FC;" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                            </MenuFlyout>
                        </Button.Flyout>
                    </Button>
                    <Button
                        Width="37"
                        Height="37"
                        Margin="5,5,5,5"
                        Command="{x:Bind ViewModel.MinCommand}"
                        CornerRadius="40"
                        Style="{ThemeResource DefaultAcrylicButtonStyle}"
                        ToolTipService.ToolTip="最小化">
                        <FontIcon
                            FontFamily="Segoe Fluent Icons"
                            FontSize="12"
                            Glyph="&#xE654;" />
                    </Button>
                    <Button
                        Width="37"
                        Height="37"
                        Margin="0,5,5,5"
                        Command="{x:Bind ViewModel.CloseWindowCommand}"
                        CornerRadius="40"
                        Style="{ThemeResource DefaultAcrylicButtonStyle}"
                        ToolTipService.ToolTip="关闭">

                        <FontIcon
                            FontFamily="Segoe Fluent Icons"
                            FontSize="12"
                            Glyph="&#xE653;" />
                    </Button>
                </StackPanel>
            </ui:TitleBar.Footer>
        </ui:TitleBar>

        <ui:ApplicationBackgroundControl
            x:Name="mediaControl"
            Grid.RowSpan="2"
            Stretch="UniformToFill"
            Style="{ThemeResource DefaultApplicationBackgroundControlStyle}">
            <ani:Explicit.Animations>
                <ani:AnimationSet x:Name="To8" IsSequential="True">
                    <ani:OpacityAnimation
                        EasingMode="EaseOut"
                        EasingType="Linear"
                        To="0.1"
                        Duration="0:0:0.5" />
                </ani:AnimationSet>
                <ani:AnimationSet x:Name="To0" IsSequential="True">
                    <ani:OpacityAnimation
                        EasingMode="EaseOut"
                        EasingType="Linear"
                        To="1"
                        Duration="0:0:0.5" />
                </ani:AnimationSet>
            </ani:Explicit.Animations>
        </ui:ApplicationBackgroundControl>
        <Grid x:Name="panel" Grid.Row="1">
            <NavigationView
                x:Name="navigationView"
                OpenPaneLength="60"
                PaneDisplayMode="Left"
                SelectedItem="{x:Bind ViewModel.SelectItem, Mode=OneWay}"
                Style="{ThemeResource MainNavigationViewStyle}">
                <NavigationView.MenuItems>
                    <NavigationViewItem
                        property:NavigationItemClickHelper.NavigationKey="Haiyu.ViewModel.HomeViewModel"
                        Content="首页"
                        ToolTipService.ToolTip="首页">
                        <NavigationViewItem.Icon>
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xEA8A;" />
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>
                    <NavigationViewItem property:NavigationItemClickHelper.NavigationKey="Haiyu.ViewModel.GameViewModels.GameContexts.WavesGameContextViewModel" Content="鸣潮">
                        <NavigationViewItem.Icon>
                            <ImageIcon Source="ms-appx:///Assets/GameIcons/global.ico" />
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>
                    <NavigationViewItem property:NavigationItemClickHelper.NavigationKey="Haiyu.ViewModel.GameViewModels.GameContexts.PunishGameContextViewModel" Content="战双">
                        <NavigationViewItem.Icon>
                            <ImageIcon Source="ms-appx:///Assets/GameIcons/pgr.ico" />
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>
                    <NavigationViewItem
                        property:NavigationItemClickHelper.NavigationKey="Haiyu.ViewModel.CommunityViewModel"
                        Content="鸣潮数据"
                        Visibility="{x:Bind ViewModel.WavesCommunitySelectItemVisiblity, Mode=OneWay}">
                        <NavigationViewItem.Icon>
                            <FontIcon FontFamily="Segoe UI Emoji" Glyph="&#x1F4E6;" />
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>
                    <NavigationViewItem
                        property:NavigationItemClickHelper.NavigationKey="Haiyu.ViewModel.CommunityViewModel"
                        Content="战双数据"
                        IsEnabled="False"
                        Visibility="{x:Bind ViewModel.PunishCommunitySelectItemVisiblity, Mode=OneWay}">
                        <NavigationViewItem.Icon>
                            <FontIcon FontFamily="Segoe UI Emoji" Glyph="&#x1F4E6;" />
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>
                    <NavigationViewItem property:NavigationItemClickHelper.NavigationKey="Haiyu.ViewModel.CloudGameViewModel" Content="云工具">
                        <NavigationViewItem.Icon>
                            <FontIcon FontFamily="Segoe UI Emoji" Glyph="&#x2601;" />
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>
                    <NavigationViewItem property:NavigationItemClickHelper.NavigationKey="Haiyu.ViewModel.ToolViewModel" Content="工具">
                        <NavigationViewItem.Icon>
                            <FontIcon FontFamily="Segoe UI Emoji" Glyph="&#x1F9F0;" />
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>
                </NavigationView.MenuItems>
                <NavigationView.PaneFooter>
                    <Button
                        Width="50"
                        Padding="15"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        Command="{x:Bind ViewModel.OpenSettingCommand}"
                        Control.IsTemplateFocusTarget="True"
                        CornerRadius="5"
                        Style="{ThemeResource TransparentButtonStyle}">
                        <FontIcon
                            FontFamily="Segoe Fluent Icons"
                            FontSize="14"
                            Glyph="&#xE713;" />
                    </Button>
                </NavigationView.PaneFooter>
                <Grid>
                    <Frame x:Name="frame" />
                </Grid>
            </NavigationView>
        </Grid>
    </Grid>
</Page>
