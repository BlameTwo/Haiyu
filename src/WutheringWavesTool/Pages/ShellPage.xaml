<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="WutheringWavesTool.Pages.ShellPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ani="using:CommunityToolkit.WinUI.Animations"
    xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
    xmlns:bs="using:WutheringWavesTool.Behaviors"
    xmlns:control="using:WutheringWavesTool.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:WutheringWavesTool.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:media="using:CommunityToolkit.WinUI.Media"
    xmlns:property="using:WutheringWavesTool.Controls.Propertys"
    xmlns:sound="using:WutheringWavesTool.Controls.Behaviors"
    xmlns:tb="using:H.NotifyIcon"
    xmlns:ui="using:WutheringWavesTool.Controls"
    mc:Ignorable="d">
    <i:Interaction.Behaviors>
        <i:EventTriggerBehavior EventName="Loaded">
            <i:InvokeCommandAction Command="{x:Bind ViewModel.LoadedCommand}" />
        </i:EventTriggerBehavior>
    </i:Interaction.Behaviors>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Border
            x:Name="backControl"
            Grid.RowSpan="2"
            Opacity="0.0" />
        <tb:TaskbarIcon
            ContextMenuMode="SecondWindow"
            IconSource="/Assets/logo.ico"
            ToolTipText="鸣潮1.0">
            <tb:TaskbarIcon.ContextFlyout>
                <MenuFlyout>
                    <MenuFlyoutItem FontFamily="{ThemeResource DefaultFont}" Text="启动游戏">
                        <MenuFlyoutItem.Icon>
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE7FC;" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>
                </MenuFlyout>
            </tb:TaskbarIcon.ContextFlyout>
        </tb:TaskbarIcon>
        <Border Grid.RowSpan="1"  />
        <ui:TitleBar
            x:Name="titlebar"
            x:FieldModifier="public"
            FooterVerticalAlignment="Center"
            IsExtendsContentIntoTitleBar="True"
            TitleMode="Tall">
            <ui:TitleBar.Header>
                <StackPanel Orientation="Horizontal">
                    <StackPanel.ChildrenTransitions>
                        <TransitionCollection>
                            <RepositionThemeTransition />
                        </TransitionCollection>
                    </StackPanel.ChildrenTransitions>
                    <Button
                        Margin="5,5,0,0"
                        Padding="20,10"
                        Command="{x:Bind ViewModel.BackPageCommand}"
                        CornerRadius="5"
                        Style="{ThemeResource TransparentButtonStyle}"
                        Visibility="{x:Bind ViewModel.BackVisibility, Mode=OneWay}">
                        <FontIcon
                            FontFamily="Segoe Fluent Icons"
                            FontSize="13"
                            Glyph="&#xE72B;" />
                    </Button>

                </StackPanel>
            </ui:TitleBar.Header>
            <ui:TitleBar.Title>
                <StackPanel Margin="0,0,0,0" Orientation="Horizontal">
                    <StackPanel.ChildrenTransitions>
                        <TransitionCollection>
                            <RepositionThemeTransition />
                        </TransitionCollection>
                    </StackPanel.ChildrenTransitions>
                    <ui:ImageEx
                        Width="18"
                        Height="18"
                        Margin="15,0,0,0"
                        VerticalAlignment="Center"
                        Source="ms-appx:///Assets/GameIcons/global.ico"
                        Stretch="UniformToFill" />
                    <TextBlock
                        Margin="10,0,0,15"
                        VerticalAlignment="Bottom"
                        FontFamily="{ThemeResource DefaultFont}"
                        FontSize="13"
                        Text="鸣潮工具箱" />
                    <TextBlock
                        Margin="5,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="12"
                        Foreground="{ThemeResource SystemColorGrayTextBrush}"
                        Text="{x:Bind ViewModel.ServerName, Mode=OneWay}" />
                </StackPanel>
            </ui:TitleBar.Title>
            <ui:TitleBar.Footer>
                <StackPanel Orientation="Horizontal">
                    <Button
                        Command="{x:Bind ViewModel.OpenTestCommand}"
                        Content="测试"
                        Visibility="Collapsed" />
                    <Button
                        Command="{x:Bind ViewModel.OpenSettingCommand}"
                        Style="{ThemeResource TransparentButtonStyle}"
                        Visibility="Collapsed">
                        <i:Interaction.Behaviors>
                            <sound:ButtonSoundBehavior />
                        </i:Interaction.Behaviors>
                        <Viewbox Height="15">
                            <AnimatedIcon x:Name="AnimatedIcon">
                                <AnimatedIcon.Source>
                                    <animatedvisuals:AnimatedSettingsVisualSource />
                                </AnimatedIcon.Source>
                                <AnimatedIcon.FallbackIconSource>
                                    <FontIconSource Glyph="&#xE713;" />
                                </AnimatedIcon.FallbackIconSource>
                            </AnimatedIcon>
                        </Viewbox>

                    </Button>
                </StackPanel>
            </ui:TitleBar.Footer>
        </ui:TitleBar>
        <Grid x:Name="panel" Grid.Row="1">
            <NavigationView
                x:Name="navigationView"
                PaneDisplayMode="Left"
                SelectedItem="{x:Bind ViewModel.SelectItem, Mode=OneWay}"
                Style="{ThemeResource MainNavigationViewStyle}">
                <NavigationView.MenuItems>
                    <NavigationViewItem property:NavigationItemClickHelper.NavigationKey="WutheringWavesTool.ViewModel.GameViewModels.MainGameViewModel" Content="官服">
                        <NavigationViewItem.Icon>
                            <ImageIcon Source="ms-appx:///Assets/GameIcons/global.ico" />
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>
                    <NavigationViewItem property:NavigationItemClickHelper.NavigationKey="WutheringWavesTool.ViewModel.CommunityViewModel" Content="库街区">
                        <NavigationViewItem.Icon>
                            <ImageIcon Source="ms-appx:///Assets/kLogo.png" />
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>

                </NavigationView.MenuItems>
                <NavigationView.PaneFooter>
                    <Button
                        MinHeight="{ThemeResource RailNavigationViewItemOnLeftMinHeight}"
                        Padding="18,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        Command="{x:Bind ViewModel.OpenSettingCommand}"
                        Control.IsTemplateFocusTarget="True"
                        CornerRadius="5"
                        Style="{ThemeResource TransparentButtonStyle}">
                        <FontIcon
                            FontFamily="Segoe Fluent Icons"
                            FontSize="14"
                            Glyph="&#xE713;" />
                    </Button>
                </NavigationView.PaneFooter>
                <Grid>
                    <ui:ImageEx
                        x:Name="image"
                        Grid.Row="2"
                        Canvas.ZIndex="-1"
                        Source="ms-appx:///Assets/Images/changli.png"
                        Stretch="UniformToFill"
                        Visibility="Visible">
                        <media:UIElementExtensions.VisualFactory>
                            <media:PipelineVisualFactory>
                                <media:BlurEffect x:Name="ImageBlurEffect" IsAnimatable="True" />
                            </media:PipelineVisualFactory>
                        </media:UIElementExtensions.VisualFactory>
                        <ani:Explicit.Animations>
                            <ani:AnimationSet x:Name="To8" IsSequential="True">
                                <ani:BlurEffectAnimation
                                    EasingMode="EaseOut"
                                    EasingType="Linear"
                                    Target="{x:Bind ImageBlurEffect}"
                                    From="0"
                                    To="15"
                                    Duration="0:0:0.5" />
                            </ani:AnimationSet>
                            <ani:AnimationSet x:Name="To0" IsSequential="True">
                                <ani:BlurEffectAnimation
                                    EasingMode="EaseOut"
                                    EasingType="Linear"
                                    Target="{x:Bind ImageBlurEffect}"
                                    From="15"
                                    To="0"
                                    Duration="0:0:0.5" />
                            </ani:AnimationSet>
                        </ani:Explicit.Animations>
                    </ui:ImageEx>
                    <Grid
                        x:Name="topControl"
                        Width="240"
                        Height="150"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <Grid Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}" CornerRadius="0 0 5 5" />
                        <Button
                            Grid.Row="1"
                            HorizontalAlignment="Center"
                            CornerRadius="0 0 5 5"
                            Style="{ThemeResource DefaultAcrylicButtonStyle}">
                            <i:Interaction.Behaviors>
                                <bs:ControlOffsetButtonAnimationBehaviors
                                    IsOpen="False"
                                    Orientation="Vertical"
                                    Owner="{x:Bind topControl, Mode=OneWay}"
                                    Offset="-68">
                                    <bs:ControlOffsetButtonAnimationBehaviors.OpenIcon>
                                        <FontIcon
                                            FontFamily="Segoe Fluent Icons"
                                            FontSize="14"
                                            Glyph="&#xE96E;" />
                                    </bs:ControlOffsetButtonAnimationBehaviors.OpenIcon>
                                    <bs:ControlOffsetButtonAnimationBehaviors.CloseIcon>
                                        <FontIcon
                                            FontFamily="Segoe Fluent Icons"
                                            FontSize="14"
                                            Glyph="&#xE96D;" />

                                    </bs:ControlOffsetButtonAnimationBehaviors.CloseIcon>
                                </bs:ControlOffsetButtonAnimationBehaviors>
                            </i:Interaction.Behaviors>
                        </Button>
                    </Grid>
                    <Frame x:Name="frame" />
                </Grid>
            </NavigationView>

        </Grid>
    </Grid>
</Page>
