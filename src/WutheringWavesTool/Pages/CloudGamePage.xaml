<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Haiyu.Pages.CloudGamePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:Haiyu.Pages"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
    xmlns:m="using:Waves.Api.Models.CloudGame"
    xmlns:m2="using:Haiyu.Models"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:Haiyu.Controls"
    xmlns:wui="using:CommunityToolkit.WinUI.Controls"
    mc:Ignorable="d">
    <i:Interaction.Behaviors>
        <i:EventTriggerBehavior EventName="Loaded">
            <i:InvokeCommandAction Command="{x:Bind ViewModel.LoadedCommand}" />
        </i:EventTriggerBehavior>
    </i:Interaction.Behaviors>
    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid
            Grid.RowSpan="2"
            Width="210"
            Height="210"
            Padding="10"
            Background="{ThemeResource AcrylicBackgroundFillColorBaseBrush}"
            CornerRadius="10"
            Visibility="{x:Bind ViewModel.LoadVisibility, Mode=OneWay}">
            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Vertical">
                <Viewbox Width="35" Height="35">
                    <ProgressRing IsActive="True" />
                </Viewbox>
                <TextBlock
                    Margin="0,10,0,0"
                    FontSize="12"
                    Text="创建登陆会话" />
            </StackPanel>
        </Grid>

        <Grid
            Grid.RowSpan="2"
            Width="300"
            Height="210"
            Padding="10"
            Background="{ThemeResource AcrylicBackgroundFillColorBaseBrush}"
            CornerRadius="10"
            Visibility="{x:Bind ViewModel.NoLoginVisibility, Mode=OneWay}">
            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Vertical">
                <StackPanel Orientation="Vertical">
                    <Image
                        Height="70"
                        Source="ms-appx:///Assets/Images/Error.gif"
                        Stretch="Uniform" />
                    <TextBlock
                        Margin="0,10,0,0"
                        VerticalAlignment="Center"
                        FontFamily="{ThemeResource DefaultFont}"
                        Text="无登陆会话，请点击右侧添加账号图标" />
                </StackPanel>
            </StackPanel>
        </Grid>
        <StackPanel Orientation="Horizontal">
            <StackPanel.ChildrenTransitions>
                <TransitionCollection>
                    <RepositionThemeTransition />
                </TransitionCollection>
            </StackPanel.ChildrenTransitions>
            <ComboBox
                Padding="10"
                VerticalContentAlignment="Center"
                IsEnabled="{x:Bind ViewModel.IsLoginUser, Mode=OneWay}"
                ItemsSource="{x:Bind ViewModel.Users, Mode=OneWay}"
                SelectedItem="{x:Bind ViewModel.SelectedUser, Mode=TwoWay}">
                <ComboBox.ItemTemplate>
                    <DataTemplate x:DataType="m:LoginData">
                        <Grid VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <ui:ImageEx
                                Width="20"
                                Height="20"
                                Source="https://mc.kurogames.com/cloud/assets/avatar-cb06ab22.png" />
                            <TextBlock
                                Grid.Column="1"
                                Margin="5,-3,0,0"
                                VerticalAlignment="Center"
                                Text="{x:Bind Phone}" />
                        </Grid>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <TextBlock
                Margin="15,0,0,0"
                VerticalAlignment="Center"
                FontFamily="{ThemeResource DefaultFont}"
                FontSize="18"
                Text="唤取记录" />

        </StackPanel>
        <StackPanel
            Padding="5"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <StackPanel
                Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource AccentAAFillColorDisabled}"
                BorderThickness="1"
                CornerRadius="5"
                Orientation="Horizontal">
                <Button
                    Command="{x:Bind ViewModel.ShowAddCommand}"
                    Style="{ThemeResource TransparentButtonStyle}"
                    ToolTipService.ToolTip="添加账号">
                    <FontIcon
                        FontFamily="{ThemeResource FluentIcon}"
                        FontSize="13.5"
                        Glyph="&#xE8FA;" />
                </Button>
                <Button
                    Command="{x:Bind ViewModel.LoadedCommand}"
                    Style="{ThemeResource TransparentButtonStyle}"
                    ToolTipService.ToolTip="刷新会话">
                    <FontIcon
                        FontFamily="{ThemeResource FluentIcon}"
                        FontSize="13.5"
                        Glyph="&#xE72C;" />
                </Button>
                <Button Style="{ThemeResource TransparentButtonStyle}" ToolTipService.ToolTip="云工具为云鸣潮账户数据">
                    <FontIcon
                        FontFamily="{ThemeResource FluentIcon}"
                        FontSize="13.5"
                        Glyph="&#xE7BA;" />
                </Button>
            </StackPanel>
            <StackPanel
                Margin="5,0,0,0"
                Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource AccentAAFillColorDisabled}"
                BorderThickness="1"
                CornerRadius="5"
                Orientation="Horizontal">
                <Button
                    Margin="0,0,0,0"
                    Command="{x:Bind ViewModel.ShowAnalysisCommand}"
                    Style="{ThemeResource TransparentButtonStyle}"
                    ToolTipService.ToolTip="分析面板">
                    <FontIcon
                        VerticalAlignment="Center"
                        FontFamily="{ThemeResource FluentIcon}"
                        FontSize="13.5"
                        Glyph="&#xEC43;" />
                </Button>
            </StackPanel>

        </StackPanel>
        <Grid
            Grid.Row="1"
            Margin="0,15,0,0"
            Visibility="{x:Bind ViewModel.DataVisibility, Mode=OneWay}">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    VerticalAlignment="Center"
                    FontFamily="{ThemeResource DefaultFont}"
                    Text="唤取类型：" />
                <ComboBox
                    Grid.Column="1"
                    Padding="10"
                    HorizontalAlignment="Stretch"
                    ItemsSource="{x:Bind ViewModel.RecordNavigationItems, Mode=OneWay}"
                    SelectedItem="{x:Bind ViewModel.SelectRecordType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate x:DataType="m2:GameRecordNavigationItem">
                            <TextBlock FontFamily="{ThemeResource DefaultFont}" Text="{x:Bind DisplayName}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <ScrollViewer Grid.Row="1" Grid.ColumnSpan="3">
                    <ItemsControl ItemsSource="{x:Bind ViewModel.ResourceItems, Mode=OneWay}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="m:Datum">
                                <Grid
                                    Margin="0,5,0,0"
                                    Padding="8.5"
                                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    CornerRadius="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        FontFamily="{ThemeResource DefaultFont}"
                                        FontSize="15"
                                        Text="{x:Bind Name}" />
                                    <TextBlock
                                        Grid.Column="1"
                                        HorizontalAlignment="Center"
                                        FontFamily="{ThemeResource DefaultFont}"
                                        FontSize="15"
                                        Text="{x:Bind ResourceType}" />
                                    <TextBlock
                                        Grid.Column="2"
                                        HorizontalAlignment="Right"
                                        FontFamily="{ThemeResource DefaultFont}"
                                        FontSize="15"
                                        Text="{x:Bind Time}" />
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.ItemContainerTransitions>
                            <TransitionCollection>
                                <ContentThemeTransition />
                            </TransitionCollection>
                        </ItemsControl.ItemContainerTransitions>
                    </ItemsControl>

                </ScrollViewer>

                <StackPanel
                    Grid.Row="2"
                    Grid.ColumnSpan="3"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <Button Command="{x:Bind ViewModel.PrevPageCommand}" Style="{ThemeResource TransparentButtonStyle}">
                        <FontIcon FontFamily="{ThemeResource FluentIcon}" Glyph="&#xE76B;" />
                    </Button>
                    <TextBlock
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        FontFamily="{ThemeResource DefaultFont}"
                        FontSize="15">
                        <Run Text="{x:Bind ViewModel.CurrentPage, Mode=OneWay}" />
                        <Run FontWeight="Bold" Text="/" />
                        <Run Text="{x:Bind ViewModel.TotalPages, Mode=OneWay}" />
                    </TextBlock>
                    <Button
                        Margin="10,0,0,0"
                        Command="{x:Bind ViewModel.NextPageCommand}"
                        Style="{ThemeResource TransparentButtonStyle}">
                        <FontIcon FontFamily="{ThemeResource FluentIcon}" Glyph="&#xE76C;" />
                    </Button>

                </StackPanel>
            </Grid>

        </Grid>
        <Grid />
    </Grid>
</Page>
