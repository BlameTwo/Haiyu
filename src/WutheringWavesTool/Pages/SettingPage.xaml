<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="WutheringWavesTool.Pages.SettingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:WutheringWavesTool.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:item="using:WutheringWavesTool.Models"
    xmlns:local="using:WutheringWavesTool.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wuc="using:WinUICommunity"
    Margin="25"
    mc:Ignorable="d">
    <i:Interaction.Behaviors>
        <i:EventTriggerBehavior EventName="Loaded">
            <i:InvokeCommandAction Command="{x:Bind ViewModel.LoadedCommand}" />
        </i:EventTriggerBehavior>
    </i:Interaction.Behaviors>
    <StackPanel>
        <TextBlock
            FontFamily="{StaticResource DefaultFont}"
            FontSize="15"
            Text="通用" />
        <Expander
            Margin="0,5,0,0"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Stretch"
            Header="壁纸">
            <Expander.Content>
                <ScrollView>
                    <ItemsView
                        IsItemInvokedEnabled="True"
                        ItemInvoked="ItemsView_ItemInvoked"
                        ItemsSource="{x:Bind ViewModel.Images, Mode=OneWay}"
                        SelectionMode="None">
                        <ItemsView.ItemTemplate>
                            <DataTemplate x:DataType="item:WallpaperModel">
                                <ItemContainer>
                                    <controls:ImageEx
                                        Margin="5"
                                        DecodePixelHeight="200"
                                        DecodePixelWidth="200"
                                        Source="{x:Bind Image}"
                                        Stretch="UniformToFill" />
                                </ItemContainer>
                            </DataTemplate>
                        </ItemsView.ItemTemplate>
                        <ItemsView.Layout>
                            <LinedFlowLayout
                                ItemsStretch="Fill"
                                LineHeight="120"
                                LineSpacing="5"
                                MinItemSpacing="5" />
                        </ItemsView.Layout>
                    </ItemsView>
                </ScrollView>
            </Expander.Content>
        </Expander>
    </StackPanel>
</Page>
