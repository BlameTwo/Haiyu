<?xml version="1.0" encoding="utf-8" ?>
<ex:WindowEx
    x:Class="Haiyu.ToolWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ani="using:CommunityToolkit.WinUI.Animations"
    xmlns:b="using:CommunityToolkit.WinUI.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ex="using:WinUIEx"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:Haiyu"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:media="using:CommunityToolkit.WinUI.Media"
    Title="ToolWindow"
    mc:Ignorable="d">

    <ex:WindowEx.SystemBackdrop>
        <DesktopAcrylicBackdrop />
    </ex:WindowEx.SystemBackdrop>
    <Grid
        Background="{ThemeResource ControlAltFillColorTransparent}"
        PointerEntered="grid_PointerEntered"
        PointerExited="grid_PointerExited"
        SizeChanged="grid_SizeChanged">
        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <RepositionThemeTransition />
            </TransitionCollection>
        </Grid.ChildrenTransitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid x:Name="grid">
            <ani:Implicit.ShowAnimations>
                <ani:OpacityAnimation To="1" />
            </ani:Implicit.ShowAnimations>
            <ani:Implicit.HideAnimations>
                <ani:OpacityAnimation To="0" />
            </ani:Implicit.HideAnimations>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Border
                Width="50"
                Height="8"
                Margin="0,5,0,0"
                HorizontalAlignment="Center"
                Background="{ThemeResource DividerStrokeColorDefaultBrush}"
                BorderBrush="{ThemeResource ControlStrongStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="5" />
            <StackPanel
                Margin="0,5,5,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Orientation="Horizontal">
                <ToggleButton Checked="ToggleButton_Checked" Unchecked="ToggleButton_Checked">
                    <FontIcon
                        FontFamily="Segoe Fluent Icons"
                        FontSize="12"
                        Glyph="&#xE718;" />
                </ToggleButton>
                <Button Margin="5,0,0,0" Click="Button_Click">
                    <FontIcon
                        FontFamily="Segoe Fluent Icons"
                        FontSize="12"
                        Glyph="&#xE653;" />
                </Button>
            </StackPanel>

        </Grid>
        <ContentControl
            x:Name="content"
            Grid.Row="1"
            HorizontalContentAlignment="Stretch"
            VerticalContentAlignment="Stretch"
            x:FieldModifier="public" />
    </Grid>
</ex:WindowEx>
